<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
    <name>mod_facebookgate</name>
    <author>Csányi Dávid</author>
    <date>2016 december</date>
    <email>csanyidav@gmail.com</email>
    <version>1.0</version>
    <description>Kaput nyit a kedvenc publikus szerverezed facebook oldalához!</description>
    
    <fields name="parameter">
        <fieldset name="basic">
            <field name="facebook_név" 
                   type="text" 
                   default="MNL Heves Megyei Levéltára" 
                   label="Facebook Page Name" 
                   description="Itt dolgozom!"/>
            <field name="megtekintheto_url" 
                   type="url" 
                   default="https://www.facebook.com/pg/MNL-Heves-Megyei-Lev%C3%A9lt%C3%A1ra-701548916624857/about/" 
                   label="Facebook Page URL" 
                   description="A cég facebook honlapja!"/>
            <field name="valaszthato_infok" 
                   type="list"
                   class="btn-group" 
                   default="timeline" 
                   label="Tabs" 
                   description="Választógomb az idővonal és az események között!">
                <option value="timeline">Idovonal</option>
                <option value="events">Események</option>
            </field>
            <field name="kontener_sz" 
                   type="text" 
                   default="350" 
                   label="Facebook Page Width" 
                   description="Általános szélessége az oldalnak!"/>
            <field name="kontener_m" 
                   type="text" 
                   default="500" 
                   label="Facebook Page Height" 
                   description="Általános magassága az oldalnak!"/>
            <field name="kontener_meret" 
                   type="radio"
                   class="btn-group" 
                   default="true" 
                   label="Adapt Container Width" 
                   description="Ha a konténer be lesz kapcsolva, ez lesz a szélessége!">
                <option value="true">Igen</option>
                <option value="false">Nem</option>
            </field>
        </fieldset>
        <fieldset name="advanced">
            <field name="cimke" 
                   type="modulelayout" 
                   label="JFIELD_ALT_LAYOUT_LABEL" 
                   description="A mod_facebookgate második get metódusának az értéke ez a mező!" />
            <field name="modulosztály"
                   type="text"
                   label="Modul Osztály Utótag"
                   description="A mod_facebookgate első get metódusának az értéke ez a mező!" />
        </fieldset>
        
    </fields>
</extension>
